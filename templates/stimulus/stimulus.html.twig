{% extends "base.html.twig" %}

{% block body %}

	{% block nav %}
		{{parent()}}
	{% endblock %}
	{% block text %}
		<div class="container-fluid">
			<div data-controller="counter">
				<button class="btn btn-info btn-sm" data-action="counter#increment">
					Click me!
				</button>
				<p class="datos">
					I 've been clicked
					<span class="text-info" data-counter-target="count">0</span>
					times!
				</p>
			</div>
			<hr>
			<form {{stimulus_controller('submit-confirm', { title: "Remove this item?", icon: "warning", confirmButtonText: "Yes, remove it", submitAsync: true,} )}} data-action="submit-confirm#onSubmit">
				<div class="input-group" {{ stimulus_controller('search-preview', { url: path('app_ejAjax') } ) }}>
					<input type="text" data-action="search-preview#onSearchInput">
					<br>
					<div class="search-preview" data-search-preview-target="result">aqui la respuesta</div>
				</div>
			</form>
		</div>
	{% endblock %}

	{% block footer %}
		{{parent()}}
	{% endblock %}
{% endblock %}
