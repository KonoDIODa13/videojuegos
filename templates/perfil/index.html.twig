{% extends 'base.html.twig' %}
{% block title %}{{ parent() }}{% endblock %}
{% block body %}
    {% block nav %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="container-fluid">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_inicio') }}">Game Experience</a>
                    </li>
                    {% if  is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="nav-item active">
                            <a class="nav-link"
                               href="{{ path('app_perfil') }}">Perfil</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ 'logout' }}">logout</a>
                        </li>
                    {% else %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_registro') }}">Registrarse</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_inicio_sesion') }}">Iniciar Sesion</a>
                        </li>
                    {% endif %}
                </ul>
                {% if  is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <img src="{{ app.user.avatarUri }}"
                         alt="{{ app.user.username }} Avatar">
                {% endif %}
            </div>
        </nav>
    {% endblock %}
{% endblock %}
