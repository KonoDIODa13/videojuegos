{% extends 'base.html.twig' %}

{% block title %}
	perfil
	{{ nombre }}
{% endblock %}

{% block body %}

	{% block nav %}
		{{ parent() }}
	{% endblock %}

	{% block text %}
		<div class="listaJuego">
			<h2 class="text-center">Tus Juegos</h2>

			{% if arrjuegos != null %}
				<div class="table-responsive">
					<table class="table table-hover border border-dark">
						<thead>
							<tr>
								<td></td>
								<td class="text-center">
									<strong>Título<strong
								></td>
								<td class="text-center">
									<strong>Géneros<strong>
								</td>
								<td></td>
							</tr>
						</thead>
						{% for key, juego in arrjuegos %}
							<tr>
								<th scope="row">{{key ++1}}</th>
								<td class="text-center">{{juego.titulo}}</td>
								<td class="text-center">
									{% for genero in juego.tema %}
										{{genero}}
									{% endfor %}
								</td>
								<td class="text-end">
									<a class="btn btn-secondary p-1" href="{{path('app_remover_juego_lista', {videojuego: juego.id})}}">remover de la lista</a>
								</td>
							</tr>
						{% endfor %}
					</table>
				</div>
				<a href="{{ path ('app_videojuegos') }}">añadir mas videojuegos</a>
			{% else %}
				no hay juegos en tu lista.<br>
				<a href="{{ path ('app_videojuegos') }}">buscar videojuegos</a>
			{% endif %}
		</div>
	{% endblock %}

	{% block footer %}
		{{parent()}}
	{% endblock %}
{% endblock %}
