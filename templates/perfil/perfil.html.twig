{% extends 'base.html.twig' %}

{% block title %}
	perfil
	{{ nombre }}
{% endblock %}

{% block body %}

	{% block nav %}
		{{ parent() }}
	{% endblock %}
	{% block text %}
		<h1 class="m-3">
			{{ nombre }}:
			<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-circle" viewbox="0 0 16 16">
				<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
				<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
			</svg>
		</h1>

		<!-- poner mas cosasssasasaas-->


		<!-- lista de videojuegos -->
		<div class="listaJuego">
			<h2>Tus juegos</h2>
			{% if arrjuegos != null %}
				{% for juego in arrjuegos %}
					<span>Titulo:
						{{ juego.titulo }}</span><br>
					<span>Año de publicación:
						{{ juego.fechaPublicacion }}</span><br><br>
				{% endfor %}
				<a href="{{ path ('app_videojuegos') }}">añadir mas videojuegos</a>
			{% else %}
				no hay juegos en tu lista.<br>
				<a href="{{ path ('app_videojuegos') }}">buscar videojuegos</a>
			{% endif %}
		</div>
	{% endblock %}
	{% block footer %}
		{{parent()}}
	{% endblock %}
{% endblock %}
