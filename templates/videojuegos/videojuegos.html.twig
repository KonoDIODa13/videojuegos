{% extends "base.html.twig" %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('prueba/videojuegos.css')}}">
{% endblock %}

{% block title %}videojuegos
{% endblock %}

{% block body %}
	{% block nav %}
		{{ parent() }}
	{% endblock %}

	{% block text %}
		<section class="py-5 bg-secondary">
			<h2 class="text-center">Videojuegos</h2>
			<div class="container px-4 px-lg-5 mt-5">
				<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center border-">
					{% for videojuego in videojuegos %}
						<div class="col mb-5">
							<div
								class="card h-100">
								<!-- Product image-->
								<img
								class="card-img-top imagen" src="{{asset('fotos/horizontal/'~videojuego.slug~'.jpeg')}}" alt="videojuego foto"/>
								<!-- Product details-->
								<div class="card-body p-4">
									<div
										class="text-center">
										<!-- Product name-->
										<h5 class="fw-bolder">{{videojuego.titulo}}</h5>
									</div>
								</div>
								<!-- Product actions-->
								<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
									<div class="text-center">
										<a class="btn btn-outline-dark mt-auto" href="{{ path('app_juego', {slug: videojuego.slug}) }}">Ver juego</a>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</section>
		{% endblock %}

		{% block footer %}
			{{parent()}}
		{% endblock %}
		<!-- Bootstrap core JS-->
		<!-- Core theme JS-->
	{% endblock %}
