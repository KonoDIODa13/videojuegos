{% extends 'perfil/index.html.twig' %}

{% block title %}videojuegos{% endblock %}

{% block body %}
    {% block nav %}{{ parent() }}{% endblock %}

    <a href="{{ path('app_perfil') }}">volver al perfil</a>

    <div class="contenedor">
        <h2 class="mt-5"> Videojuegos</h2>
        <div class="row">
            {% for juego in videojuego %}
                <div>
                    <a href="{{ path('app_videojuego', {slug: juego.slug}) }}">Titulo: {{ juego.titulo }}</a><br>
                    <span>Tema:
                    {% for temas in juego.tema %}
                        {{ temas }}</span>
                    {% endfor %}
                    <br><span>Fecha de publicaci√≥n: {{ juego.fechaPublicacion }}</span><br>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
