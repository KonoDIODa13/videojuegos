{% extends "base.html.twig" %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('prueba/iniciarSesion.css')}}">
{% endblock %}

{% block body %}
	{% block nav %}
		{{parent()}}
	{% endblock %}
	{% block text %}
		<div class="login-form">
			<form method="post">
				<div class="avatar">
					<img src="{{asset('fotos/avatar.png')}}" alt="Avatar">
				</div>
				<h2 class="text-center">Inicio de sesión</h2>
				<div class="form-group p-2">
					<label for="inputNombre" class="fw-bold">Nombre de usuario:</label>
					<input type="text" class="form-control" name="nombreUsuario" id="inputNombre" required="required">
				</div>
				<div class="form-group p-2">
					<label for="inputContra" class="fw-bold">Contraseña:</label>
					<input type="password" class="form-control" name="contra" id="inputContra" required="required">
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="form-group text-center p-2">
					<button type="submit" class="btn btn-primary btn-lg btn-block">Iniciar sesión</button>
				</div>
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
			</form>
			<p class="text-center small fw-bolder">¿No tienes cuenta todavía?
				<a href="#">Registrate aquí</a>
			</p>
		</div>
	{% endblock %}
	{% block footer %}
		{{parent()}}
	{% endblock %}
{% endblock %}
