{% extends "base.html.twig" %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('prueba/juegov2.css')}}">
{% endblock %}

{% block body %}
	{% block nav %}
		{{parent()}}
	{% endblock %}

	{% block text %}

		<section class="container p-3 rounded">
			<div class="px-4">
				<div class="text-center">
					<h2>{{videojuego.titulo}}</h2>
				</div>
				<div class="row gx-4 gx-lg-5 align-items-center py-2">
					<div class="col-md-7"><img class="card-img-top mb-5 mb-md-0" src="{{asset('fotos/horizontal/'~videojuego.slug~'.jpeg')}}" alt="{{asset('fotos/horizontal/'~videojuego.slug~'.jpeg')}}"/></div>
					<div class="col-md-5">
						<div class="d-flex flex-row">
							<div class="m-3 p-2">
								<p>
									<h5>Directores:</h5>
									{% if directores != null %}
										{% for director in directores %}
											<span class="datos">
												{{director}}.<br>
											</span>
										{% endfor %}
									{% else %}
										<span class="datos">
											No hay datos del los directores.
										</span>
									{% endif %}
								</p>
							</div>

							<div class="m-3 p-2">
								<p>
									<h5>Géneros:</h5>
									{% if generos != null %}
										{% for genero in generos %}
											<span class="datos">
												{{genero}}.<br>
											</span>
										{% endfor %}
									{% else %}
										<span class="datos">
											No hay datos de los generos.
										</span>
									{% endif %}
								</p>
							</div>
						</div>
						<div class="d-flex flex-row">
							<div class="m-3 p-2">
								<p>
									<h5>Plataformas:</h5>
									{% if plataformas != null %}
										{% for plataforma in plataformas %}
											<span class="text">
												{{plataforma}}.<br>
											</span>
										{% endfor %}
									{% else %}
										<span class="datos">
											No hay datos de las plataformas.
										{% endif %}
									</p>
								</p>
							</div>

							<div class="m-3 p-2">
								<p>
									<h5>Año de publicación</h5>
									{% if videojuego.fechaPublicacion != null %}
										<span class="datos">
											{{videojuego.fechaPublicacion}}.
										</span>
									{% else %}
										<span class="datos">
											no hay datos del año de publicación.
										</span>
									{% endif %}
								</p>
							</div>
						</div>
						{% if videojuego.descripcion != null %}
							<div>
								<div class="m-3 p-2">
									<p>
										<h5>Descripción:</h5>
										{{videojuego.descripcion}}.
									</p>
								</div>
							</div>
						{% endif %}
						{% if usuario != null %}
							<div class="text-center">
								<a class="btn btn-primary flex-shrink-0" type="button" href="#">
									Añadir a la lista
								</a>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</section>

		{% if usuario != null %}
			<section class="mt-3 p-3 container rounded mb-5">
				{% if comentarios != null %}
					<h2 class="card-title text-center">Comentarios</h2>
					<div class="m-3 p-3">
						{% for comentario in comentarios %}
							<p class="datos">
								<span class="text-capitalize">{{comentario.usuario}}:</span>
								<br>
								{{comentario.comentario}}.
							</p>
						{% endfor %}
					</div>
                    {% else %}
                    <h4 class="text-center">Aun no hay comentarios.</h4>    
				{% endif %}
			</section>
		{% endif %}

	{% endblock %}

	{% block footer %}
		{{parent()}}
	{% endblock %}
{% endblock %}
